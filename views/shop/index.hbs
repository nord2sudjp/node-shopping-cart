<div class="row">

    <div class="col-lg-6 offset-lg-3 col-sm-6 offset-sm-3 col-md-6 offset-md-3">
        {{#if successMsg}}
        <div id="success" class="alert alert-success mx-auto">
            {{successMsg}}
        </div>
        {{/if}}
    </div>
</div>
{{#each products}}
<div class="row">

    {{#each this}}
    <div class="col-md-4">
        <div class="card mb-4 shadow-sm">
            <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg"
                preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Thumbnail">
                <image width="100%" height="100%" xlink:href="{{this.imagepath}}">
                    <rect width="100%" height="100%" fill="#55595c">
                    </rect>
            </svg>
            <div class="card-body">
                <p> {{this.title}}</p>
                <p class="card-text">{{this.description}}</p>
                <div class="d-flex justify-content-between align-items-center">
                    <dt class="price">{{this.price}}$</dt>
                    <!-- <button type="button" class="btn btn-success" role="button">Add to Shopping cart</button> -->
                    <a href="/add-to-cart/{{this._id}}" class="btn btn-success" role="button">Add to Shopping cart</a>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>
{{/each}}