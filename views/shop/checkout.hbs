<script src="https://js.stripe.com/v3/"></script>
<script src="js/index.js" data-rel-js></script>


<div class="row">
    <div class="col-sm-8 col-md-8 offset-sm-2 offset-md-2">
        <div>
            <h1>Checkout</h1>
            <h4>Your Total: ${{total}}</h4>
            <div id="card-errors"></div>
            {{#if errMsg}}
            <div id="charge-error" class="alert alert-danger">
                {{errMsg}}
            </div>
            {{/if}}
            <form id="payment-form" method="post" action="/checkout" class="py-2">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" id="name" class="form-control" required name="name">
                </div>
                <div class="form-group">
                    <label for="address">Address</label>
                    <input type="text" id="address" class="form-control" required name="address">
                </div>
                <hr>
                <div class="cell example example1 py-2" id="example-1">
                    <fieldset>
                        <div class="row">
                            <div id="card-element"></div>
                        </div>
                    </fieldset>
                    <button type="submit" data-tid="elements_examples.form.pay_button">
                        Pay ${{total}}
                    </button>
                    <!-- <input type="hidden" name="stripeToken" class="token"> -->
                </div>
            </form>
        </div>
    </div>
</div>


<!-- Scripts for each example: -->
<script src=" js/client.js" data-rel-js>
</script>